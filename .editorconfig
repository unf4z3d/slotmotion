# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[./src/*]
end_of_line = lf
insert_final_newline = true
indent_style = space
charset = utf-8
indent_size = 4
trim_trailing_whitespace = true

[{*.json,.*.yml,*.html}]
indent_style = space
indent_size = 2